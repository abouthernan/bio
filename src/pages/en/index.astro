---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug";
import { getLangFromUrl, useTranslations } from '../../lib/i18n.js';

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const last_posts = posts.slice(0, 3);

// Agregamos estas l√≠neas para las traducciones
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-50">
    <div class="avatar transition ease-in-out hover:scale-[102%] block m-auto">
      <div class="w-[8.5rem]">
        <img
          class="mask mask-circle"
          width="400"
          height="400"
          src="/profile.png"
          alt="Profile image"
        />
      </div>
    </div>
    <div class="text-xl py-1">{t('hero.greeting')}</div>
    <div class="text-5xl font-bold">{t('hero.name')}</div>
    <div class="text-3xl py-3 font-bold"></div>
    <div class="py-2">
      <text class="text-lg">
        <b>{t('hero.role')}</b> with 8+ years driving digital
        transformation and business scaling. Founder of <a href="https://vehement.co">vehement.co</a> and <a href="https://hazlolatam.com">hazlolatam.com</a>, a thriving community for LATAM entrepreneurs. Expert in
        product development, B2B marketing automation, and growth engineering
        with a proven track record of taking startups from concept to market
        leadership. <br /><br /> 
        
        <b>Specialized in rapid prototyping through no-code/low-code
        platforms</b> and early AI adoption for enhanced productivity and
        innovation. Proficient across modern tools including Bubble, Webflow,
        Framer, Cursor, and Bolt, enabling accelerated development cycles and
        seamless product iterations. Advanced analytics capabilities with
        hands-on experience in conversion optimization, marketing attribution
        modeling, and translating complex datasets into actionable growth
        strategies. <br /><br />
        
        Passionate about leveraging cutting-edge AI tools to
        transform innovative ideas into scalable solutions while leading
        cross-functional teams to deliver exceptional results. Dedicated to
        mentoring entrepreneurs and teams, helping them harness the power of
        no-code technologies and artificial intelligence to achieve measurable
        ROI and exceed growth targets.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://twitter.com/abouthernan" target="_blank">
        {t('hero.cta')}
      </a>
        <a
        href="https://www.canva.com/design/DAGx4dU2aao/4Bn2FHkyeWvDvzaVZtgiIw/view?utm_content=DAGx4dU2aao&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=he3bd5544a6"
        target="_blank"
        class="btn btn-outline ml-5"
      >
        {t('hero.resume')}
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  /* Responsive */
  @media (min-width: 1024px) {
    .avatar {
      display: none;
    }

    .pb-12 {
      margin-top: 5rem;
    }
  }

  @media (max-width: 480px) {
    .mt-50 {
      text-align: center;
    }

    .avatar {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto;
    }
  }
</style>