---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug";
import { getLangFromUrl, useTranslations } from "../../lib/i18n.js";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const last_posts = posts.slice(0, 3);

// Agregamos estas l√≠neas para las traducciones
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-50">
    <div class="avatar transition ease-in-out hover:scale-[102%] block m-auto">
      <div class="w-[8.5rem]">
        <img
          class="mask mask-circle"
          width="400"
          height="400"
          src="/profile.png"
          alt="Profile image"
        />
      </div>
    </div>
    <div class="text-xl py-1">{t("hero.greeting")}</div>
    <div class="text-5xl font-bold">{t("hero.name")}</div>
    <div class="text-3xl py-3 font-bold"></div>
    <div class="py-2">
      <text class="text-lg">
        {t("hero.role")}
        I am a Growth Marketing and Product Development Specialist with over 10 years
        of experience, dedicated to scaling businesses from conceptualization to sustained
        profitability. My expertise is rooted in growth engineering, B2B marketing
        automation, and data-driven strategies, with a proven track record of optimizing
        key metrics: achieving 50% CAC reduction , increasing ROI by over 70% , and
        boosting lead conversion by up to 300%. <br /><br />
        
        My product approach is deeply based on Lean Startup and Agile methodologies, ensuring product-market fit and continuous
        validation. I specialize in rapid prototyping and MVP development using an
        advanced technological stack , including tools like Bubble, Webflow, Bolt,
        and Cursor (low-code/no-code), alongside automation and outreach platforms
        such as Apollo, Sales Navigator, Instantly, and Hunter for efficient funnel
        execution. I am also the Founder of vehement.co and hazlolatam.com. <br /><br />
        
        I currently lead multidisciplinary Growth, Marketing, and Product teams with a clear results-oriented
        focus. My leadership commitment involves translating data insights into actionable
        strategies to generate sustainable growth , scaling operations from internal
        projects to managing multiple simultaneous clients with significant budgets
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://wa.me/+573133846633" target="_blank">
        {t("hero.cta")}
      </a>
      <a
        href="https://www.canva.com/design/DAGx4dU2aao/4Bn2FHkyeWvDvzaVZtgiIw/view?utm_content=DAGx4dU2aao&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=he3bd5544a6"
        target="_blank"
        class="btn btn-outline ml-5"
      >
        {t("hero.resume")}
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  /* Responsive */
  @media (min-width: 1024px) {
    .avatar {
      display: none;
    }

    .pb-12 {
      margin-top: 5rem;
    }
  }

  @media (max-width: 480px) {
    .mt-50 {
      text-align: center;
    }

    .avatar {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto;
    }
  }
</style>
